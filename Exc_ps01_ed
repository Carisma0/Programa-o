/*Incluindo bibliotecas*/

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <conio.h>

/*Definindo Constante T*/

#define QTD 6
#define TAM 10

/*Definindo Funções*/

void bsort(char v[QTD][TAM],int qtd);
int pesqseq(char v[QTD][TAM],char busca[TAM]);

/*Função Main*/

int main(){

  printf("Simular a busca SEQUENCIAL do vetor ORDENADO v que contém os seguintes dados:\n");
  printf("Maria, Sandra, Andre, Mario, Dirce, Sandro, para o nome informado.\n\n");

/*Declaração de Variáveis*/

  char pes[TAM],opc;
  char v[QTD][TAM] = {"Maria","Sandra","Andre","Mario","Dirce","Sandro"};
  
  bsort(v,QTD);
  
  do{
  	system("cls");
  	printf("Dado a ser pesquisado: ");
  	gets(pes);
  	if(pesqseq(v,pes)!=-1){
  		puts(pes);
  		printf(" esta no vetor.");
  }
  	else{
  		puts(pes);
  		printf(" não esta no vetor.");
  	}
  	printf("\nContinuar pesquisa?[S/N]");
  	fflush(stdin);
  	opc=getch();
  }while(opc=='S'||opc=='s');
  getch();
  return 0;
}

void bsort(char v[QTD][TAM],int qtd){
	
	int i,j;
	char temp[10];
	
	for(i=1;i<qtd;i++){
		for(j=0;j<qtd-i;j++){
			if(strcmp(v[j],v[j+1]) > 0){
				strcpy(temp,v[j]);
				strcpy(v[j],v[j+1]);
				strcpy(v[j+1],temp);
			}
		}
	}
}

int pesqseq(char v[QTD][TAM],char busca[TAM]){
	int i;
	for(i=0;i<QTD;i++){
		if(strcmp(v[i],busca) == 0)
			return i;
		else
			if(strcmp(v[i],busca)>1)
				return -1;
	}
	return -1;
}
